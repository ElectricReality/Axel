<% include ./blocks/header %>
<p style="text-align: center; font-size: 30px;">Manage <%= dockerapp.Spec.Name %></p>
<div class="jumbobox">
  <br>
  <p style="font-size: 20px;">Deployment Settings</p>
  <hr>
  <form action="/applications/<%= dockerapp.Spec.Name %>" method="post">
    <p style="font-size: 18px;">Git</p>
    <ul>
      <li><input type="text" name="giturl" value="<% if(mongoapp.deployment.giturl == 'ns'){ } else { return mongoapp.deployment.giturl } %>" placeholder="Git Url"></li>
      <li><input type="text" name="gitusername" value="<% if(mongoapp.deployment.giturl == 'ns'){ } else { return mongoapp.deployment.giturl } %>" placeholder="Git Username"></li>
      <li><input type="text" name="gitpassword" value="<% if(mongoapp.deployment.giturl == 'ns'){ } else { return mongoapp.deployment.giturl } %>" placeholder="Git Password"></li>
    </ul>
    <p style="font-size: 20px;">Environment Variables</p>
    <hr>
    <p style="font-size: 18px;">Variables</p>
    <div class="input_fields_wrap">
      <button class="add_field_button">Add More Fields</button>
      <div class="env"><input type="text" name="envname[1]"><input type="text" name="envvalue[1]"><a href="#" class="remove_field">Remove</a></div>
    </div>

    <ul>
      <li><input type="text" name="envname" value="" placeholder="Name"></li>
      <li><input type="text" name="envvalue" value="" placeholder="Value"></li>
    </ul>
    <ul>

    </ul>
  </form>
  <p style="font-size: 20px;">Advanced Settings</p>
  <hr>
  <a class="button" href="/applications/<%= dockerapp.Spec.Name %>/remove" style="padding-top:5px; padding-bottom:5px;">Delete App</a>
</div>

<% include ./blocks/footer %>
