<% include ./blocks/header %>
<p style="text-align: center; font-size: 30px;">Manage <%= dockerapp.Spec.Name %></p>
<div class="cards">
  <div class="card">
    <div class="content">
      <form action="/applications" method="post">
        <p style="font-size: 20px;">Deployment</p>
        <hr>
        <p style="font-size: 18px;">Git</p>
        <input type="text" name="giturl" value="<% if(!mongoapp.deployment.giturl){ } else { mongoapp.deployment.giturl } %>" placeholder="Git Url">
        <input type="text" name="gitusername" value="" placeholder="Git Username">
        <input type="text" name="gitpassword" value="" placeholder="Git Password">
        <p style="font-size: 18px;">Tar</p>
        <br>
        <button type="submit">Create!</button>
      </form>
    </div>
  </div>
</div>
<% include ./blocks/footer %>
